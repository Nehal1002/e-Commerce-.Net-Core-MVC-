
@model DynamicMenuProject.View_Models.CMSItemsViewModel
@{
    ViewData["Title"] = "CreatePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/ckeditor/ckeditor.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

@*<environment include="Development">
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</environment>*@
<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create Page</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" enctype="multipart/form-data">
                <div class="card-body">
                    @*<div asp-validation-summary="All" class="text-danger">*@
                    </div>
                    <div class="form-group">
                        <label asp-for="PageName"></label>
                        <input asp-for="PageName" class="form-control" placeholder="PageName">
                        <span asp-validation-for="PageName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PageUrl"></label>
                        <input asp-for="PageUrl" class="form-control" placeholder="PageUrl">
                        <span asp-validation-for="PageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea id="Description" class="ckeditor" name="Description" rows="200"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BannerImageFile"></label>
                        <input asp-for="BannerImageFile" class="form-control" type="file" />
                        <span asp-validation-for="BannerImageFile" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/CMS/Index" type="submit" class="btn btn-primary">Cancel</a>
        </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
