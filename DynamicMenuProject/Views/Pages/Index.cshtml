@model IEnumerable<DynamicMenuProject.Models.CMSItems>
@{ 
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pages</title>

</head>

<body>
    @if (Model.Count() > 1)
    {
        foreach (var cms in Model)
        {
            <a href="/pages/index/@cms.PageUrl">@cms.PageName</a><br />
        }
    }
    else
    {
        <img style="width:1070px;height:150px; object-fit:cover" src="~/Images/@Model.FirstOrDefault().BannerImage"><br />
        @Html.Raw(Model.FirstOrDefault().Description)<br />

    }
</body>
</html>
